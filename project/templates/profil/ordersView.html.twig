{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

    <div class="container col-md-6">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="card col align-self-center ">
                <div class="col-auto">
                    <div class="card-header text-center">
                        <h1 class="mx-auto p-2 ">Mes commandes</h1>
                    </div>
                    <div class="card-body">
                        <div class="container">
                            {% for order in orders %}
                                {% if order.user.id == user.id %}
                                    <div class="card p-2 m-2">
                                        <div class="row mx-auto">
                                            <div class="col-2">
                                                Id : {{ order.id }}
                                            </div>
                                            <div class="col mx-auto">
                                                date : {{ order.createdAt|date('d-m-Y H:i:s') }}
                                            </div>
                                            <div class="col mx-auto">
                                                total : {{ order.totalPrice }}â‚¬
                                            </div>
                                            <div class="col mx-auto">
                                                <a href="{{ path('profil_order', {'id': order.id }) }}" class="btn btn-primary">voir</a>
                                            </div>
                                        </div>

                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
