{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}

    <div class="container">
        <div class='card-header'>
            <h2>Finalisation de votre commande</h2>
        </div>
        <div class="row">
            <aside class="col-3 p-2">
                <div class="card card-body">
                    <h5> Recap de votre commande</h5>
                    {% for element in dataPanier %}
                        <div>
                            {{ element.product.name }} x {{ element.quantity }}
                            : {{ element.product.price * element.quantity }}€
                        </div>
                    {% endfor %}
                    <div class="card card-footer">
                        Total : {{ total }}€
                    </div>
                </div>
            </aside>
            <main class="col-9 p-2">
                <div class=" card card-body bg-white col-4">
                    {{ form_start(FinaliseForm) }}
                    <div class="col p-2 mx-auto">
                        <div>
                            Adresse de livraison :
                        </div>
                        <div>
                            {{ form_row(FinaliseForm.deliveryAddress) }}
                        </div>
                        <div class="row row-gap-2">
                            <div>
                                Adresse de facturation :
                            </div>
                            <div>
                                {{ form_row(FinaliseForm.billingAddress) }}
                            </div>
                        </div>
                        <div class="row row-gap-2">
                            <div>
                                Autres infos :
                            </div>
                            <div>
                                {{ form_row(FinaliseForm.otherInfos) }}
                            </div>
                        </div>
                        <div class="row p-2">
                            <button class="btn btn-primary">valider</button>
                        </div>

                    </div>

                    {{ form_end(FinaliseForm) }}

                </div>
            </main>
        </div>
    </div>

{% endblock %}